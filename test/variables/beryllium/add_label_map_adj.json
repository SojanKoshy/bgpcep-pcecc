    "arguments": {
      "odl-pcep-pcecc:pce-label-map": {
        "label":{
          "labelNum": "$adj_label",
          "out-label": "false",
          "processing-rule": "false",
          "ignore": "false"
        },
        "srp": {
          "operation-id": "1",
          "processing-rule": "false",
          "ignore": "false"
        },
        "fec": {
          "local-ip-address": "$local_ip",
          "remote-ip-address": "$remote_ip",
          "processing-rule": "false",
          "ignore": "false"
        }
      }
    },
    "network-topology-ref": "/network-topology:network-topology/network-topology:topology[network-topology:topology-id=\"pcep-topology\"]"
  }
}